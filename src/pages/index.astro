---
import "../assets/css/main.css";
import SkillCard from "@/components/SkillCard";
import ProjectCard from "@/components/ProjectCard";
import CertificateCard from "@/components/CertificateCard";

import { projects, skills, certificates } from "@/utils/constants";

// script

const date = new Date();

const year = date.getUTCFullYear();

// Icons

// contacts
import { MdiWhatsapp } from "@/icons/MdiWhatsapp";
import { MdiGithub } from "@/icons/MdiGithub";
import { MdiLinkedin } from "@/icons/MdiLinkedin";
import { SimpleIconsProtonmail } from "@/icons/SimpleIconsProtonmail";
import { MdiFileDownload } from "@/icons/MdiFileDownload";
import cvDocument from "@/assets/cv/CV_Obed_Villegas.pdf";

// navbar
import { AntDesignProjectOutlined } from "@/icons/AntDesingProjectOulined";
import { IconParkOutlineMuscle } from "@/icons/IconParkOutlineMuscle";
import { MdiCertificateOutline } from "@/icons/MdiCertificateOtline";
import { MdiCardAccountPhone } from "@/icons/MdiCardAccountPhone";
---

<html lang="es" class="scroll-smooth">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/hack-font/3.3.0/web/hack.min.css"
    />
    <title>Ezebed</title>
  </head>
  <body class="background flex snap-mandatory flex-col gap-20 text-white">
    <div
      class="relative flex h-screen w-full snap-center flex-col items-center justify-center space-y-4 overflow-hidden bg-[rgba(13_13_13_/.6)]"
    >
      <nav class="absolute right-8 top-4 hidden sm:block">
        <ul class="flex gap-8 [&>li]:flex [&>li]:items-center [&>li]:gap-2">
          <li class="hover:underline hover:underline-offset-4">
            <AntDesignProjectOutlined /><a class="capitalize" href="#projects"
              >Projects</a
            >
          </li>
          <li class="hover:underline hover:underline-offset-4">
            <IconParkOutlineMuscle /><a class="capitalize" href="#skills"
              >Skills</a
            >
          </li>
          <li class="hover:underline hover:underline-offset-4">
            <MdiCertificateOutline /><a class="capitalize" href="#certificates"
              >Certificates</a
            >
          </li>
          <li class="hover:underline hover:underline-offset-4">
            <MdiCardAccountPhone /><a class="capitalize" href="#contacts"
              >Contact me</a
            >
          </li>
        </ul>
      </nav>
      <h1 class="text-center text-7xl font-bold">
        Obed Ezequiel <span class="text-indigo-500">Villegas Flores</span>
      </h1>
      <p class="text-3xl">Frontend developer</p>

      <div
        class="flex h-fit w-10/12 flex-wrap items-center justify-center gap-4 rounded-3xl border border-slate-200 bg-[rgba(255_255_255_/.1)] p-4 backdrop-blur-sm md:w-fit"
      >
        <a href="https://wa.me/584163351489" target="_blank">
          <MdiWhatsapp fontSize="2rem" />
        </a>
        <a href="https://github.com/Ezebed" target="_blank">
          <MdiGithub fontSize="2rem" />
        </a>
        <a
          href="https://www.linkedin.com/in/obed-villegas-aa537b132"
          target="_blank"
        >
          <MdiLinkedin fontSize="2rem" />
        </a>
        <a href="mailto:obedvillegas@protonmail.com" target="_blank">
          <SimpleIconsProtonmail fontSize="2rem" />
        </a>
        <a href={cvDocument} target="_blank">
          <MdiFileDownload fontSize="2rem" />
        </a>
      </div>

      <div class="stars">
        <p class="star star-1"></p>
        <p class="star star-2"></p>
        <p class="star star-3"></p>
        <p class="star star-4"></p>
        <p class="star star-5"></p>
        <p class="star star-6"></p>
      </div>
    </div>

    <section class="h-fit px-8 font-bold">
      <h2 id="skills" class="text-3xl uppercase italic">Skills</h2>

      <div class="my-4 flex flex-wrap justify-center gap-x-4 gap-y-2">
        {
          skills.map((skill) => (
            <SkillCard
              skillText={skill.skillText}
              bgColor={skill.bgColor}
              LogoIcon={skill.LogoIcon}
            />
          ))
        }
      </div>
    </section>

    <section class="h-fit space-y-4 px-8">
      <h2 id="projects" class="text-3xl font-bold uppercase italic">
        proyectos
      </h2>

      <div
        class="mx-0 grid grid-cols-1 place-items-center gap-4 lg:mx-16 lg:grid-cols-2"
      >
        {
          projects.map((project) => (
            <ProjectCard
              title={project.title}
              description={project.description}
              img={project.img}
              tecnologies={project.tecnologies}
              git={project.git}
              siteUrl={project.siteUrl}
            />
          ))
        }
      </div>
    </section>

    <section class="space-y-4 px-8">
      <h2 id="certificates" class="text-3xl font-bold uppercase italic">
        Certificados
      </h2>

      <div
        class="flex flex-col flex-wrap items-center justify-center gap-x-2 gap-y-4 md:flex-row"
      >
        {
          certificates.map((certificate) => (
            <CertificateCard
              courseName={certificate.courseName}
              imgSrc={certificate.imgSrc}
              date={certificate.date}
              pdfPath={certificate.pdfPath}
            />
          ))
        }
      </div>
    </section>

    <section class="space-y-4 px-8">
      <h2 id="contacts" class="text-3xl font-bold uppercase italic">
        contactame
      </h2>

      <address
        class="flex flex-col gap-y-2 overflow-hidden rounded-lg bg-[#222] p-4"
      >
        <a
          href="https://wa.me/584163351489"
          target="_blank"
          class="flex h-8 w-fit items-center gap-x-2 px-2 py-1"
        >
          <MdiWhatsapp fontSize="1.5rem" />
          <p class="text-lg capitalize">+58 416-3351489</p>
        </a>
        <a
          href="https://github.com/Ezebed"
          target="_blank"
          class="flex h-8 w-fit items-center gap-x-2 px-2 py-1"
        >
          <MdiGithub fontSize="1.5rem" />
          <p class="text-lg capitalize">github</p>
        </a>
        <a
          href="https://www.linkedin.com/in/obed-villegas-aa537b132"
          target="_blank"
          class="flex h-8 w-fit items-center gap-x-2 px-2 py-1"
        >
          <MdiLinkedin fontSize="1.5rem" />
          <p class="text-lg capitalize">Linkedin</p>
        </a>
        <a
          href="mailto:obedvillegas@protonmail.com"
          target="_blank"
          class="flex h-8 w-fit items-center gap-x-2 px-2 py-1"
        >
          <SimpleIconsProtonmail fontSize="1.5rem" />
          <p class="text-md sm:text-lg">obedvillegas@protonmail.com</p>
        </a>
      </address>
    </section>

    <footer
      class="flex flex-col-reverse items-center justify-center gap-4 bg-[rgba(13_13_13_/.6)] py-2 sm:flex-row"
    >
      <p><strong>&copy</strong> {year} Obed Villegas</p>
      <div class="flex gap-4">
        <a href="https://wa.me/584163351489" target="_blank">
          <MdiWhatsapp />
        </a>
        <a href="https://github.com/Ezebed" target="_blank">
          <MdiGithub />
        </a>
        <a
          href="https://www.linkedin.com/in/obed-villegas-aa537b132"
          target="_blank"
        >
          <MdiLinkedin />
        </a>
        <a href="mailto:obedvillegas@protonmail.com" target="_blank">
          <SimpleIconsProtonmail />
        </a>
        <a href={cvDocument} target="_blank">
          <MdiFileDownload />
        </a>
      </div>
    </footer>

    <script>
      import { elementObserver } from "../assets/ts/elementObserver";

      elementObserver(".waiter", "slide-in");
    </script>
  </body>
</html>
