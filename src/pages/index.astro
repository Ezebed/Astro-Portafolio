            src={courseImg.src}
            alt="certificate_alt"
            class="object-contain"
          />
          <div class="flex flex-col gap-y-2">
            <strong class="font-bold uppercase">Curso de Laravel</strong>
            <span class="text-sm text-[#777]">2024</span>
