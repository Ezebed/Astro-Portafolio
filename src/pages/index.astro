        <p class="star star-4"></p>
        <p class="star star-5"></p>
        <p class="star star-6"></p>
      </div>
    </div>

    <section class="px-8 font-bold h-fit">
      <h2 class="uppercase italic text-3xl">Skills</h2>

      <div class="flex flex-wrap gap-x-4 gap-y-2 justify-center my-4">
